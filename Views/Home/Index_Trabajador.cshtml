@model List<Gestper.Models.Ticket>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Gestper - Panel Admin</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f8ff;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .page-container {
            display: flex;
            flex-grow: 1;
            height: 100vh;
        }

        /* Estilo para el contador de tickets */
        .ticket-counter {
            display: flex;
            justify-content: space-around;
            background-color: #f0f8ff;
            padding: 15px 0;
            border-bottom: 1px solid #ccc;
            position: relative; /* Para posicionar el botón de cerrar sesión */
        }

        .counter-item {
            text-align: center;
        }

        .counter-number {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .counter-label {
            font-size: 12px;
            font-weight: bold;
        }

        /* Estilo para el botón de cerrar sesión */
        .logout-button {
            position: absolute;
            top: 15px;
            right: 20px;
            background-color: #ff3333;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 15px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .logout-button:hover {
            background-color: #cc0000;
        }

        /* Estilo para la barra lateral */
        .sidebar {
            width: 250px;
            background-color: #0078ff;
            color: white;
            display: flex;
            flex-direction: column;
            height: 100%;
            overflow-y: auto;
        }

        .sidebar-logo {
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        .sidebar-logo img {
            width: 120px;
            height: auto;
        }

        .sidebar-item {
            padding: 15px 20px;
            font-size: 16px;
            cursor: pointer;
            color: white;
            text-decoration: none;
            display: block;
        }

        .sidebar-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Estilos para los filtros en la barra lateral */
        .sidebar-filters {
            padding: 15px;
            margin-top: 20px;
        }

        .sidebar-filters input,
        .sidebar-filters select {
            width: 100%;
            padding: 8px 10px;
            margin-bottom: 15px;
            border-radius: 20px;
            border: none;
            font-size: 14px;
            background-color: white;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            box-sizing: border-box; /* Añadir esta línea para asegurar que el padding no afecte el ancho total */
            height: 36px; /* Establecer una altura fija para todos los elementos */
        }

        /* Estilo específico para los selects */
        .sidebar-filters select {
            background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='%23000' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3E%3Cpath d='M6 9l6 6 6-6'/%3E%3C/svg%3E");
            background-repeat: no-repeat;
            background-position: right 10px center;
            padding-right: 30px;
        }

        .sidebar-filters a {
            color: white;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 10px;
        }

        .sidebar-filters a:hover {
            text-decoration: underline;
        }

        /* Estilo para el botón de búsqueda */
        .search-button {
            width: 100%;
            padding: 8px;
            border-radius: 20px;
            border: none;
            background-color: white;
            color: #0078ff;
            font-weight: bold;
            margin-bottom: 10px;
            cursor: pointer;
        }

        .search-button:hover {
            background-color: #f0f0f0;
        }

        .main-container {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .main {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            background-color: #f0f8ff;
            overflow: auto;
        }

        .main-header {
            padding: 20px;
            border-bottom: 1px solid #e0e0e0;
        }

        .main-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .tickets-table {
            width: 100%;
            border-collapse: collapse;
        }

        .tickets-table th {
            background-color: #f5f5f5;
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .tickets-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
        }

        .tickets {
            padding: 0;
            overflow-y: auto;
            flex-grow: 1;
        }
    </style>
</head>
<body>
    <div class="page-container">
        
        <div class="sidebar">
            <div class="sidebar-logo" style="display: flex; flex-direction: column; align-items: center;">
                <img src="/images/logo.png" alt="Gestper Logo" style="width: 120px; height: auto;">
                <div style="margin-top: 10px; font-size: 14px; font-weight: bold; color: white;">
                    Departamento: @ViewBag.DepartamentoNombre
                </div>
            </div>
            
            <!-- Filtros en la barra lateral -->
            <form method="get" asp-controller="Trabajador" asp-action="Index" class="sidebar-filters">
                <input type="text" name="idBusqueda" placeholder="Ingrese una ID a buscar" value="@Context.Request.Query["idBusqueda"]" />
                
                <select name="idEstado">
                    <option value="">Seleccione estado</option>
                    @foreach (var estado in ViewBag.Estados)
                    {
                        <option value="@estado.IdEstado" selected="@(Context.Request.Query["idEstado"] == estado.IdEstado.ToString())">
                            @estado.NombreEstado
                        </option>
                    }
                </select>
                
                <select name="idPrioridad">
                    <option value="">Seleccione prioridad</option>
                    @foreach (var prioridad in ViewBag.Prioridades)
                    {
                        <option value="@prioridad.IdPrioridad" selected="@(Context.Request.Query["idPrioridad"] == prioridad.IdPrioridad.ToString())">
                            @prioridad.NombrePrioridad
                        </option>
                    }
                </select>
                
                
                <button type="submit" class="search-button">Buscar</button>
                <a href="@Url.Action("Index", ViewContext.RouteData.Values["controller"].ToString())">Limpiar filtros</a>
            </form>
        </div>

        <div class="main-container">
            <!-- Contador de tickets ahora con el mismo color de fondo que la página -->
            <div class="ticket-counter">
                <div class="counter-item">
                    <div class="counter-number">@ViewBag.Total</div>
                    <div class="counter-label">TODOS LOS TICKETS</div>
                </div>
                <div class="counter-item">
                    <div class="counter-number">@ViewBag.Nuevos</div>
                    <div class="counter-label">TICKETS NUEVOS</div>
                </div>
                <div class="counter-item">
                    <div class="counter-number">@ViewBag.EnProgreso</div>
                    <div class="counter-label">EN PROGRESO</div>
                </div>
                <div class="counter-item">
                    <div class="counter-number">@ViewBag.Cerrados</div>
                    <div class="counter-label">CERRADOS</div>
                </div>
                
                <!-- Botón de cerrar sesión ahora en la esquina superior derecha -->
                <form asp-controller="Usuario" asp-action="CerrarSesion" method="post">
                    <button type="submit" class="logout-button">Cerrar sesión</button>
                </form>
            </div>

            <div class="main">
                <div class="main-header">
                    <div class="main-title">Listado de Tickets</div>
                </div>

                <div class="tickets">
                    <table class="tickets-table">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Descripción</th>
                                <th>Fecha de Creación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                <tr>
                                    <td>@ticket.Titulo</td>
                                    <td>@(ticket.Descripcion?.Length > 100 ? ticket.Descripcion.Substring(0, 100) + "..." : ticket.Descripcion)</td>
                                    <td>@ticket.FechaCreacion.ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("Detalle", "Trabajador", new { id = ticket.IdTicket })">Ver detalles</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
